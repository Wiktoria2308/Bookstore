@model Order

<form asp-action="Checkout" method="post" role="form">
    <h4 class="mt-4 mb-4">You're just one step away from your fantastic books.</h4>

    <div asp-validation-summary="All" class="text-danger"></div>


    <div class="form-group">
        <label asp-for="FirstName" class="col-md-2 control-label mb-0"> First Name</label>
        <div class="col-md-5">
            <input asp-for="FirstName" class="form-control form-control-sm" placeholder="First Name"/>
            <span asp-validation-for="FirstName" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <label asp-for="LastName" class="col-md-2 control-label mb-0">Last Name</label>
        <div class="col-md-5">
            <input asp-for="LastName" class="form-control form-control-sm" placeholder="Last Name" />
            <span asp-validation-for="LastName" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <label asp-for="AddressLine1" class="col-md-2 control-label mb-0">Address Line 1</label>
        <div class="col-md-5">
            <input asp-for="AddressLine1" class="form-control form-control-sm" placeholder="Address Line 1" />
            <span asp-validation-for="AddressLine1" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <label asp-for="AddressLine2" class="col-md-2 control-label mb-0">Address Line 2</label>
        <div class="col-md-5">
            <input asp-for="AddressLine2" class="form-control form-control-sm" placeholder="Address Line 2"/>
            <span asp-validation-for="AddressLine2" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <label asp-for="ZipCode" class="col-md-2 control-label mb-0">Zip Code</label>
        <div class="col-md-5">
            <input asp-for="ZipCode" class="form-control form-control-sm" placeholder="Zip Code"/>
            <span asp-validation-for="ZipCode" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <label asp-for="City" class="col-md-2 control-label mb-0"></label>
        <div class="col-md-5">
            <input asp-for="City" class="form-control form-control-sm" placeholder="City"/>
            <span asp-validation-for="City" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <label asp-for="State" class="col-md-2 control-label mb-0"></label>
        <div class="col-md-5">
            <input asp-for="State" class="form-control form-control-sm" placeholder="State"/>
            <span asp-validation-for="State" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <label asp-for="Country" class="col-md-2 control-label mb-0"></label>
        <div class="col-md-5">
            <input asp-for="Country" class="form-control form-control-sm" placeholder="Country" />
            <span asp-validation-for="Country" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <label asp-for="PhoneNumber" class="col-md-2 control-label mb-0">Phone Number</label>
        <div class="col-md-5">
            <input asp-for="PhoneNumber" class="form-control form-control-sm" placeholder="Phone Number"/>
            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <label asp-for="Email" class="col-md-2 control-label mb-0"></label>
        <div class="col-md-5">
            <input asp-for="Email" class="form-control form-control-sm" placeholder="Email"/>
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-5">
            <input type="submit" class="btn btn-primary" value="Complete order" />
        </div>
    </div>

</form>

