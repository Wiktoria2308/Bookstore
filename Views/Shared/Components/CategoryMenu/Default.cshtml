@model IEnumerable<Category>

<li class="dropdown nav-item">
    <a asp-controller="Book"
       asp-action="Index"
       class="nav-link text-dark" data-toggle="dropdown" style="background-color: transparent; padding-right: 0;">Books
        <svg stroke="currentColor" fill="currentColor" stroke-width="0"
             viewBox="0 0 1024 1024" class="arrow-down ml-1"
             height="1em" width="1em" xmlns="http://www.w3.org/2000/svg">
            <path d="M8.2 275.4c0-8.6 3.4-17.401 10-24.001 13.2-13.2 34.8-13.2 48 0l451.8 451.8 445.2-445.2c13.2-13.2 34.8-13.2 48 0s13.2 34.8 0 48L542 775.399c-13.2 13.2-34.8 13.2-48 0l-475.8-475.8c-6.8-6.8-10-15.4-10-24.199z"></path>
        </svg>
    </a>
    <ul class="dropdown-menu mobile-right-dropdown">
        @foreach (var category in Model)
        {
            <li>
                <a asp-controller="Book"
                   asp-action="List"
                   asp-route-Category="@category.CategoryName">@category.CategoryName</a>
            </li>
        }
        <li class="dropdown-divider"></li>
        <li>
            <a asp-controller="Book" 
               asp-action="List"
               asp-route-Category="">View all books</a>
        </li>
    </ul>

</li>
