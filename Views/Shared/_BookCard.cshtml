<div class="col-6 col-lg-4 col-md-4 col-xl-3 my-4 d-flex">
    <div class="card mx-auto h-100 d-flex flex-column" style="max-width: 15rem;">

        <!-- OBRAZEK -->
        <div class="text-center p-3">
            <a asp-controller="Book" asp-action="Details" asp-route-id="@Model.BookId">
                <img src="~/images/@Model.ImageUrl" alt="@Model.Title"
                     class="card-img-top"
                     style="width:10rem; height:15rem;" />
            </a>
        </div>

        <!-- TREŚĆ -->
        <div class="card-body d-flex flex-column p-3">

            <!-- GÓRA -->
            <div>
                <p class="card-title mb-2" style="font-weight:400; font-size:medium;">
                    <a asp-controller="Book" asp-action="Details" asp-route-id="@Model.BookId">
                        @Model.Title
                    </a>
                </p>
                <p class="card-subtitle text-muted mb-2" style="font-weight:300; font-size:small;">
                    @Model.Author
                </p>
            </div>

            <!-- DÓŁ: cena + przycisk -->
            <div class="mt-auto">
                <p class="card-text mb-2" style="font-weight:400; color:#fc6a03; font-size:larger;">
                    @Model.Price.ToString("c", new System.Globalization.CultureInfo("sv-SE"))
                </p>
                <a class="btn btn-primary w-100"
                   style="background-color:#E94819; border:0;"
                   asp-controller="ShoppingCart"
                   asp-action="AddToShoppingCart"
                   asp-route-bookId="@Model.BookId">
                   Add to cart
                </a>
            </div>

        </div>
    </div>
</div>
